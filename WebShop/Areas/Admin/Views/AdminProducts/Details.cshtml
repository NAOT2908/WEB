@model WebShop.Models.Product

@{
    ViewData["Title"] = "Thông tin sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin sản phẩm : @Model.ProductName</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin sản phẩm</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID :</td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm :</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    
                    <tr>
                        <td>Danh mục :</td>
                        <td>@Model.Cat.CatName</td>
                    </tr>
                    <tr>
                        <td>Giá bán :</td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td>Giảm giá :</td>
                        <td>@Model.Discount</td>
                    </tr>
                    <tr>
                        <td>Tiêu đề :</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo :</td>
                        <td>@Model.DateCreated</td>
                    </tr>
                    <tr>
                        <td>Ngày chỉnh sửa :</td>
                        <td>@Model.DateModified</td>
                    </tr>
                    <tr>
                        <td>Ảnh :</td>
                        <td>
                            <img height="200" width="200" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>Trạng thái:</td>
                        <td>
                            @if (Model.Active)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="" />
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2"  />
                                    <label for="switch-2"></label> 
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Bestseller:</td>
                        <td>
                            @if (Model.BestSellers)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="" />
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2"  />
                                    <label for="switch-2"></label>
                                </div>
                            }
                        </td>
                    </tr>

                    <tr>
                        <td>HomeFlag:</td>
                        <td>
                            @if (Model.HomeFlag)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="" />
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2" />
                                    <label for="switch-2"></label>
                                </div>
                            }

                        </td>
                    </tr>
                    
                    <tr>
                        <td>Mô tả sản phẩm:</td>
                        <td>@Html.Raw(Model.Description)</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.ProductId">Sửa</a> |
    <a asp-action="Index" class="btn btn-primary">Quay về</a>
</div>
